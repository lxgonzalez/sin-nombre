---
// Section Header component
interface Props {
    title: string;
    subtitle?: string;
    alignment?: "left" | "center" | "right";
    titleSize?: "sm" | "md" | "lg" | "xl";
    className?: string;
}

const {
    title,
    subtitle,
    alignment = "center",
    titleSize = "md",
    className = "",
} = Astro.props;

const alignmentClasses = {
    left: "text-left",
    center: "text-center",
    right: "text-right",
};

const titleSizeClasses = {
    sm: "text-2xl md:text-3xl",
    md: "text-3xl md:text-4xl",
    lg: "text-4xl md:text-5xl",
    xl: "text-5xl md:text-6xl",
};
---

<div class={`mb-16 ${alignmentClasses[alignment]} ${className}`}>
    <h2 class={`font-bold text-white mb-6 ${titleSizeClasses[titleSize]}`}>
        {title}
    </h2>
    {
        subtitle && (
            <p class="text-lg text-gray-400 max-w-3xl mx-auto">{subtitle}</p>
        )
    }
</div>
