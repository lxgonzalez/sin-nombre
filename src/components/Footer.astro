---
// Footer component
import footerData from "../data/footer.json";
---

<footer class="bg-primary-100 py-16 relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-10">
        <div
            class="absolute top-10 left-10 w-32 h-32 bg-white rounded-full opacity-5"
        >
        </div>
        <div
            class="absolute bottom-20 right-20 w-24 h-24 bg-white rounded-full opacity-5"
        >
        </div>
        <div
            class="absolute top-1/2 left-1/3 w-16 h-16 bg-white rounded-full opacity-5"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="grid lg:grid-cols-4 md:grid-cols-2 gap-8 mb-12">
            <!-- Company Info -->
            <div class="lg:col-span-2">
                <div class="mb-6">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="flex items-center space-x-3">
                            <img
                                src="/favicon.svg"
                                alt="Nexode Logo"
                                class="w-7 h-7"
                            />
                            <h1 class="text-3xl text-white">
                                <span class="font-bold"
                                    >{footerData.company.name}</span
                                >
                                Soluciones
                            </h1>
                        </div>
                    </div>
                    <p class="text-white/80 mb-6 max-w-md leading-relaxed">
                        {footerData.company.description}
                    </p>
                </div>
            </div>

            <!-- Services -->
            <div>
                <h4 class="text-white font-bold mb-6 text-lg">
                    {footerData.services.title}
                </h4>
                <ul class="space-y-4">
                    {
                        footerData.services.links.map((service) => (
                            <li>
                                <a
                                    href={service.href}
                                    class="text-white/80 hover:text-white transition-colors duration-300 flex items-center group"
                                >
                                    <span class="w-2 h-2 bg-white/40 rounded-full mr-3 group-hover:bg-white transition-colors duration-300" />
                                    {service.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Company -->
            <div>
                <h4 class="text-white font-bold mb-6 text-lg">
                    {footerData.company_links.title}
                </h4>
                <ul class="space-y-4">
                    {
                        footerData.company_links.links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-white/80 hover:text-white transition-colors duration-300 flex items-center group"
                                >
                                    <span class="w-2 h-2 bg-white/40 rounded-full mr-3 group-hover:bg-white transition-colors duration-300" />
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Bottom Section -->
        <div class="border-t border-white/20 pt-8">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-6"
            >
                <!-- Copyright -->
                <div class="text-white/80 text-sm">
                    <p set:html={footerData.legal.copyright} />
                </div>

                <!-- Legal Links -->
                <div class="flex gap-6">
                    {
                        footerData.legal.links.map((link) => (
                            <a
                                href={link.href}
                                class="text-white/80 hover:text-white text-sm transition-colors duration-300"
                            >
                                {link.name}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</footer>
